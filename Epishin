#include <avr/io.h>
#include <avr/interrupt.h>

int ii=1 << 10;
int main(void)
{
	DDRB=0xFF;
	DDRA=0xFF;
	TCCR1B |= ((1<<WGM12) | (1 << CS10) | (1 << CS11)) ;
	OCR1A= 15624;
	TIMSK|= (1<<OCIE1A);
	sei();
   
}

ISR(TIMER1_COMPA_vect){
	ii >>=1;
	if(!ii) ii=1<<9;
	PORTA=0x0F - ((ii & 0x0F00)>>6);
	PORTB=0xFF -ii;
}
